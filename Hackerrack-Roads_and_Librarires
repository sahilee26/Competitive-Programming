#include<bits/stdc++.h>
using namespace std;
long long n,m,clib,croad,ans;

vector <long long> parent(101000,0);

long long par(long long a)
{
    if(parent[a]==a)
    return a;
    parent[a]=par(parent[a]);
    return parent[a];
}

void uni(long long a,long long b)
{
    long long p1=par(a),p2=par(b);
    if(p1!=p2)
    {
        parent[p1]=p2;
        ans+=croad;
    }
}

int main()
{
    long long q;
    cin>>q;
    while(q--)
    {
        ans=0;
        cin>>n>>m>>clib>>croad;
        for(int i=0;i<=n;i++)
        parent[i]=i;
        vector <pair<long long,long long> > vect;
        for(int i=0;i<m;i++)
        {
            long long a,b;
            cin>>a>>b;
            vect.push_back({a,b});
        }
        if(clib<=croad)
        {
            cout<<n*clib<<endl;
            continue;
        }
        for(int i=0;i<m;i++)
        {
            uni(vect[i].first,vect[i].second);
        }
        set <long long> set1;
        for(int i=1;i<=n;i++)
        set1.insert(par(parent[i]));
        cout<<ans+set1.size()*clib<<endl;
    }
    return 0;
}
